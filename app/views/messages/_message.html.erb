<div class="event">
  <div class="content">
    <div class="summary">
      <% if current_user == message.user %>
        <em class="nickname-1"><%= message.user.email %></em>
      <% else %>
        <em class="nickname-2"><%= message.user.email %></em>
      <% end%>
      : <%= message.body %>
      <div class="time_to_right time"><%= (message.created_at).strftime("%T %d/%m" ) %></div>
    </div>
  </div>
</div>