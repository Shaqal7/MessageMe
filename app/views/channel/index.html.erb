<div class="container-fluid h-90">
  <div class="row justify-content-center h-90">
    <div class="col-md-12 col-xl-6 chat">
      <div class="card">
        <div class="card-header msg_head">
          <div class="d-flex bd-highlight">
            <div class="user_info">
              <span>Puk puk</span>
            </div>
          </div>
        </div>
        <div class="card-body msg_card_body" id="messages">
          <div class="feed" id="msg">
            <%= render @messages %>
          </div>
        </div>
        <div class="card-footer">
        <%= form_for(@message, remote: true, html: {class: "input-group", role: "form"}, url: message_path) do |f| %>
          <div class="input-group-append">
            <span class="input-group-text attach_btn"><i class="fas fa-paperclip"></i></span>
          </div>
          <%= f.text_field :body, placeholder: "Napisz wiadomoÅ›Ä‡...", id: "message_content", autocomplete: "off", class: "form-control type_msg" %>
          <div class="input-group-append">
            <%= f.button '<i class="fas fa-location-arrow"></i>'.html_safe, class: 'input-group-text send_btn' %>
          </div>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
